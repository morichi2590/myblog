<head>
  <title>Sample</title>
  <style type="text/css" href="./style.css"></style>

<!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>

</head>

  <div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <a href="/tweets" class="brand-logo">MyBlog</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      </ul>
    </div>
  </nav>
  </div>



<div data-aos="fade-right">
     <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="<%= @tweet.image %>">
              <span class="card-title"><%= @tweet.title %></span>
            </div>
            <div class="card-content">
              <p><%= @tweet.text %></p>
            </div>
                  <div class="card-action">
                    <div class="map">
                      <iframe src="<%= @tweet.map %>" width="400" height="300" frameborder="0" style="border:0" allowfullscreen>
                      </iframe>
                    </div>
                    <a href="#"><%= link_to '投稿一覧へ戻る', "/tweets", method: :get %></a>              <% if user_signed_in? and current_user.id == @tweet.user_id%>
                    <a href="#"><%= link_to '編集', "/tweets/#{@tweet.id}/edit", method: :get %></a>
                    <a href="#"><%= link_to '削除', "/tweets/#{@tweet.id}", method: :delete %></a>
              <% end %>
                  </div>
          </div>
        </div>
      </div>
</div>

</div>
