  <div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <a href="/tweets" class="brand-logo">MyBlog</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      </ul>
    </div>
  </nav>
  </div>

<div class="row">
  <%= form_for @tweet do |f| %>
    <div class="field_title">
      <%= f.label :title, "タイトル"%>
      <%= f.text_field :title %>
    </div>
    <div class="field_text">
      <%= f.label :text, "内容" %>
      <%= f.text_area :text ,style: 'width: 100%;height: 300px;' %>
    </div>
    <div class="field_image">
      <%= f.label :image, "画像" %>
      <%= f.text_field :image %>
    </div>
    <div class="field_image">
      <%= f.label :map, "マップ" %>
      <%= f.text_field :map %>
    </div>
    <a class="waves-effect waves-light btn"><%= f.submit "送信" %></a>
  <% end %>
</div>
