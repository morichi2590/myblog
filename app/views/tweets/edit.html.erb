<h2></h2>

<div class="row">
<%= form_for @tweet do |f| %>

<div class="field">
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :text, "内容" %>
  <%= f.text_area :text ,style: 'width: 100%;height: 300px;'%>
</div>

<div class="field">
  <%= f.label :image, "画像" %>
  <%= f.text_field :image %>
</div>

<div class="field_image">
    <%= f.label :map, "マップ" %>
    <%= f.text_field :map %>
</div>

<a class="waves-effect waves-light btn"><%= f.submit "更新" %></a>

<% end %>
</div>
