<div data-aos="fade-right">
     <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="<%= tweet.image %>">
              <span class="card-title"><%= tweet.title %></span>
            </div>
            <div class="card-content">
              <p><%= tweet.text %></p>
            </div>
                  <div class="card-action">
                    <div class="map">
                    </div>
                    <a href="#"><%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %></a>
              <% if user_signed_in? and current_user.id == tweet.user_id%>
                    <a href="#"><%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %></a>
                    <a href="#"><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></a>
                  </div>
              <% end %>
          </div>

        </div>
      </div>
</div>

